---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";

import HeroBackground from "../components/HeroBackground.astro";

import EmployeeSection from "../components/EmployeeSection.astro";
const employeeData = await fetch("https://raw.githubusercontent.com/Rasmus-Olsen/frontend-design/main/resources/json/employees.json").then((res) => res.json());
---

<BaseLayout title="Team">
    <HeroBackground surface="team" tag="TEAM" headline="The Consultors"/>
    <EmployeeSection data={employeeData} heading="Meet Our Great Team" button="Join our team" description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. enim ad minim veniam, quis nostrud exercitation."/>
</BaseLayout>
