---
import EmployeeCard from "./EmployeeCard.astro"


const { data, tag, heading, button, description } = Astro.props

---


<section class="employees-wrapper">

    <div class="top">
        <div class="text"> 
            {tag && (
                <p class="tag">{tag}</p>
            )}
              {heading && (
                <h1>{heading}</h1>
            )}
                  {description && (
                    <p>{description}</p>
                )}
        </div>
        {button && (
            <a class="btn-primary" href="#">{button}</a>
        )}
        
    </div>
    <div class="employees">
        {
            data.map(employee => <EmployeeCard employee={employee}/>)
        }
    </div>
</section>

<style>
    @layer components {
        .employees-wrapper {
            display: grid;
            gap: 40px;
      
            .top {
                display: flex;
                justify-content: space-between;
                align-items: flex-end;
      
                .text {
                    max-width: 50%;
                    h1 {
                        margin-bottom: 16px;
                    }
                    .tag {
                        padding: 0px 15px;
                        background: var(--primary-color);
                        display: inline-block;
                        border-radius: 20px;
                        margin-bottom: 16px;
                    }
                }
                @media (width < 600px) {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 1rem;
                    .text {
                        max-width: 100%;
                    }
                }
            }
        .employees {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            row-gap: 80px;
            column-gap: 50px;
            @media (width < 600px) {
                grid-template-columns: 1fr;
                row-gap: 40px;
            }
        }
    }
}
    
</style>