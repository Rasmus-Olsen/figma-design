---

<button popovertarget="popup" class="loginbtn">Login</button>

<div popover id="popup">
  <h4>Dashboard Login</h4>
  <form action="/submit-form" method="POST">
    
    <input placeholder="Enter Email" type="text" name="name" required />

    <input placeholder="Enter Password" type="email" name="email" required />

    <input class="submit" type="submit" value="Go to dashboard" name="Show Dashboard" />
  </form>
</div>

<style>
  @layer components {
  [popover]::backdrop {
    background: rgba(0, 0, 0, 0.50);
    backdrop-filter: blur(16px);
  }

   .loginbtn {
    background-color: var(--primary-color);
    font-size: 1rem;
    padding: 4px 16px;
    border-radius: 20px;
    border: 2px solid transparent;
    cursor: pointer;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 20px;
    .submit {
      background-color: var(--primary-color);
      color: var(--heading-color);
      width: 200px;
      margin: 0 auto;
    }
    label {
      display: flex;
      width: 382px;
      padding: 24px 33px;
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
      border-radius: 54px;
      border: 1px solid #e3e3e3;
      background: #fff;
    }

    input {
      border-radius: 100px;
      background: var(--white-color);
      padding: 18px;
      color: var(--body-text);
      width: 400px;


      @media (width < 600px) {
        width: 300px;
        margin: 0 auto;
      }
    }
  }



  #popup {
    width: 750px;
    padding: 40px 60px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
    background: rgba(0, 0, 0, 0.8);
    border-radius: 20px;
    align-items: center;
    &:popover-open {
      display: flex;
    }

    h4 {
    color: var(--white-color)!important;
    }
    @media (width < 600px) {
      width: 100%;
      padding: 2rem;
    }
  }
}
</style>